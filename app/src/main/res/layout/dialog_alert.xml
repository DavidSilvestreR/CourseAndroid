<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="logoInferior"
            type="boolean"/>
        <variable
            name="logoSuperior"
            type="boolean"/>
        <variable
            name="titulo"
            type="String"
            android:value="hola"/>
        <variable
            name="texto"
            type="String" />
        <variable
            name="txtPositive"
            type="String" />
        <variable
            name="txtNegative"
            type="String" />
        <variable
            name="clickListenerPositive"
            type="android.view.View.OnClickListener" />

        <variable
            name="clickListenerNegative"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_card">

        <ImageView
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:visibility="@{logoSuperior ? View.VISIBLE : View.GONE}"
            android:src="@drawable/image_1"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tituloAlerta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center"
            android:text="@{titulo}"
            tools:text="Texto titulo"/>

        <TextView
            android:id="@+id/mensajeAlerta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="@{texto}"
            android:textSize="16sp"
            android:textColor="@color/white"
            tools:text="Texto"/>

        <ImageView
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="@{logoInferior ? View.VISIBLE : View.GONE}"
            android:src="@drawable/akar_icons_arrow_left"
            tools:ignore="ContentDescription" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="24dp"
                android:layout_weight="1"
                style="@style/Button"
                android:onClick="@{(v) -> clickListenerPositive.onClick(v)}"
                android:text="@{txtPositive}" />
            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"/>
            <Button
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="24dp"
                android:layout_weight="1"
                android:onClick="@{(v) -> clickListenerNegative.onClick(v)}"
                android:text="@{txtNegative}" />
        </LinearLayout>
    </LinearLayout>

</layout>